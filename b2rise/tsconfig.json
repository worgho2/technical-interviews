{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "module": "NodeNext",

    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
